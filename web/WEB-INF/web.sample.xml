<web-app>
	<!-- General description of your web application -->
	
	<display-name>Drifing Souls</display-name>
	<description>
		Dies ist die Java Version von Drifting Souls 2
	</description>
			 
	<context-param>
		<param-name>configdir</param-name>
		<param-value>/home/bktheg/Projects/dsj/web/WEB-INF/cfg/</param-value>
		<description>
			Die DS2-Hauptkonfigurationsverzeichnis
		</description>
	</context-param>
	<context-param>
		<param-name>logger</param-name>
		<param-value>org.apache.commons.logging.impl.SimpleLog</param-value>
	</context-param>

	<servlet>
		<servlet-name>ds</servlet-name>
		<servlet-class>net.driftingsouls.ds2.server.framework.DriftingSoulsServlet</servlet-class>
		<description>
			Main DS Servlet
		</description>
		<!-- Load this servlet at server startup time -->
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ds</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app> 
